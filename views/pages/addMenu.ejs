<form action="#" method="post">
  <div>
    <label for="nama">Nama menu</label>
    <input
      type="text"
      id="nama"
      name="nama"
      placeholder="Bakso Beranak"
      class="form-control p-2 border-0"
    />
  </div>
  <div>
    <label for="kategori">Kategori</label><br />
    <input
      type="radio"
      id="kategori"
      name="kategori"
      class="p-2 border-0"
      value="makanan"
    />
    Makanan
    <input
      type="radio"
      id="kategori"
      name="kategori"
      class="p-2 border-0"
      value="minuman"
    />
    Minuman
    <input
      type="radio"
      id="kategori"
      name="kategori"
      class="p-2 border-0"
      value="camilan"
    />
    Camilan
  </div>
  <div>
    <label for="deskripsi">Deskripsi</label>
    <textarea
      name="deskripsi"
      id="deskripsi"
      cols="30"
      rows="5"
      class="form-control"
    ></textarea>
  </div>
  <div>
    <label for="harga">Harga (Rp)</label>
    <input
      type="number"
      id="harga"
      name="harga"
      placeholder="10.000"
      class="form-control p-2 border-0"
    />
  </div>
  <div>
    <label for="diskon">Diskon (Rp)</label>
    <input
      type="number"
      id="diskon"
      name="diskon"
      placeholder="3000"
      class="form-control p-2 border-0"
    />
  </div>
  <div>
    <label for="qty">Quantity</label>
    <input
      type="number"
      id="qty"
      name="qty"
      placeholder="3000"
      class="form-control p-2 border-0"
    />
  </div>
  <div>
    <label for="komposisi">Komposisi</label>
    <input
      type="number"
      id="komposisi"
      name="komposisi"
      placeholder="eg : madu,jahe,telur"
      class="form-control p-2 border-0"
    />
  </div>
  <div class="mb-3">
    <label for="formFile" class="form-label">Upload image</label>
    <input class="form-control" type="file" id="formFile" name="image" />
  </div>
  <div>
    <input type="submit" class="btn btn-secondary" />
  </div>
</form>
